# ChatPlants Configuration

# === APLICACIÓN ===
APP_NAME="AgentRagMCP"
APP_VERSION="1.0.0"
APP_DESCRIPTION="AgentRagMCP - Asistente IA especializado en plantas con múltiples RAGs"
ENVIRONMENT="development"  # development, production
DEBUG=false
LOG_LEVEL="info"  # debug, info, warning, error

# === API ===
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api"
CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000"

# === LLM Y EMBEDDINGS ===
LLM_MODEL="llama3.1"
LLM_BASE_URL="http://localhost:11434"
EMBEDDING_MODEL="llama3.1"
LLM_TEMPERATURE=0.7

# === RAG Y VECTORSTORES ===
VECTORSTORE_TYPE="chroma"
VECTORSTORE_BASE_PATH="./data/vectorstores"
RETRIEVAL_K=5
RETRIEVAL_TYPE="mmr"  # similarity, mmr

# Temáticas RAG disponibles (separadas por comas)
RAG_TOPICS="plants,pathology,general"

# Paths específicos por temática (opcional)
PLANTS_VECTORSTORE_PATH="./data/vectorstores/plants"
PATHOLOGY_VECTORSTORE_PATH="./data/vectorstores/pathology" 
GENERAL_VECTORSTORE_PATH="./data/vectorstores/general"

# === AGENTES ===
AGENT_SELECTION_MODEL="llama3.1"
DEFAULT_AGENT="general"

# === ESPECIES ESPECÍFICAS ===
# Especies para información general (separadas por comas)
SPECIFIC_SPECIES="Malus domestica,Prunus cerasus,Vitis vinifera,Citrus aurantium,Prunus persica,Fragaria vesca,Solanum lycopersicum,Psidium guajava,Syzygium cumini,Citrus limon,Mangifera indica,Punica granatum,Prunus armeniaca,Vaccinium macrocarpon,Pyrus communis"

# Especies para patologías (separadas por comas)
PATHOLOGY_SPECIES="Malus domestica,Vitis vinifera,Citrus aurantium,Solanum lycopersicum"

# === MCP (Model Context Protocol) ===
MCP_ENABLED=false

# Servidores MCP (formato: "nombre:url,nombre2:url2")
# Ejemplo: "plants_db:http://localhost:8001,weather:http://localhost:8002"
MCP_SERVERS=""

# === HISTORIAL DE CHAT ===
CHAT_HISTORY_TYPE="memory"  # memory, redis, database
CHAT_HISTORY_MAX_MESSAGES=20

# === MONITOREO ===
METRICS_ENABLED=true

# === DESARROLLO ===
# Configuraciones específicas para desarrollo local

# Ollama local
# LLM_BASE_URL="http://host.docker.internal:11434"  # Para Docker

# Vectorstores locales para desarrollo
